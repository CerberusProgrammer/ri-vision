<html>
<head>
<style>
  .p-4 {
    padding: 1rem;
  }

  .flex {
    display: flex;
  }

  .justify-center {
    justify-content: center;
  }

  .items-center {
    align-items: center;
  }

  .relative {
    position: relative;
  }

  .btn {
    border: none;
    cursor: pointer;
  }

  .btn-secondary {
    background-color: #6c757d;
  }

  .w-48 {
    width: 12rem;
  }

  .h-48 {
    height: 12rem;
  }

  .w-20 {
    width: 5rem;
  }

  .h-20 {
    height: 5rem;
  }

  .rounded-full {
    border-radius: 9999px;
  }

  .opacity-70 {
    opacity: 0.7;
  }

  .items-center {
    align-items: center;
  }

  .justify-center {
    justify-content: center;
  }

  .shadow-md {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .shadow-lg {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .text-white {
    color: #fff;
  }

  .text-2xl {
    font-size: 1.5rem;
  }

  .absolute {
    position: absolute;
  }

  .top-0 {
    top: 0;
  }

  .left-1/2 {
    left: 50%;
  }

  .top-1/2 {
    top: 50%;
  }

  .right-0 {
    right: 0;
  }

  .bottom-0 {
    bottom: 0;
  }

  .left-0 {
    left: 0;
  }

  .transform {
    transform: translate3d(0, 0, 0);
  }

  .translate-x-[-50%] {
    transform: translateX(-50%);
  }

  .translate-y-[-150%] {
    transform: translateY(-150%);
  }

  .translate-x-[150%] {
    transform: translateX(150%);
  }

  .translate-y-[-50%] {
    transform: translateY(-50%);
  }

  .translate-x-[-50%] {
    transform: translateX(-50%);
  }

  .translate-y-[150%] {
    transform: translateY(150%);
  }

  .translate-x-[-150%] {
    transform: translateX(-150%);
  }

  .translate-y-[-50%] {
    transform: translateY(-50%);
  }
</style>
</head>
<body>
<div class="p-4 flex justify-center items-center">
  <div class="relative">
    <!-- Núcleo del átomo -->
    <div class="btn btn-secondary flex w-48 h-48 rounded-full opacity-70 items-center justify-center shadow-md">
      <p class="text-white text-2xl">Realizar un PDF en base al texto</p>
    </div>
    <!-- Electrones del átomo -->
    <div class="absolute top-0 left-1/2 transform translate-x-[-50%] translate-y-[-150%] btn btn-secondary opacity-70 h-20 w-20 rounded-full flex items-center justify-center shadow-lg">
      <p class="text-white">Analisis</p>
    </div>
    <div class="absolute top-1/2 right-0 transform translate-x-[150%] translate-y-[-50%] btn btn-secondary opacity-70 h-20 w-20 rounded-full flex items-center justify-center shadow-lg">
      <p class="text-white">Modelado</p>
    </div>
    <div class="absolute bottom-0 left-1/2 transform translate-x-[-50%] translate-y-[150%] btn btn-secondary h-20 w-20 opacity-70 rounded-full flex items-center justify-center shadow-lg">
      <p class="text-white">Pruebas</p>
    </div>
    <div class="absolute top-1/2 left-0 transform translate-x-[-150%] translate-y-[-50%] btn btn-secondary opacity-70 h-20 w-20 rounded-full flex items-center justify-center shadow-lg">
      <p class="text-white">Lanzar</p>
    </div>
  </div>
</div>
</body>
</html>

