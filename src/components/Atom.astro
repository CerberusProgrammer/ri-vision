<style>

.electron {
  transform: translateY(100px);
  opacity: 0;
  transition: transform 2s, opacity 2s;
}

.electron.visible {
  transform: translateY(0);
  opacity: 1;
}

</style>
<div class="p-40 flex justify-center items-center">
    <div class="relative">
        <!-- Núcleo del átomo -->
        <div class="btn btn-secondary flex w-48 h-48 rounded-full opacity-70 items-center justify-center shadow-md">
            <p class="text-white text-2xl">Realizar un PDF en base al texto</p>
        </div>
        <!-- Electrones del átomo -->
        <div class="electron absolute top-0 left-1/2 transform translate-x-[-50%] translate-y-[-150%] btn btn-secondary opacity-70 h-20 w-20 rounded-full flex items-center justify-center shadow-lg">
            <p class="text-white">Analisis</p>
        </div>
        <div class="electron absolute top-1/2 right-0 transform translate-x-[150%] translate-y-[-50%] btn btn-secondary opacity-70 h-20 w-20 rounded-full flex items-center justify-center shadow-lg">
            <p class="text-white">Modelado</p>
        </div>
        <div class="electron absolute bottom-0 left-1/2 transform translate-x-[-50%] translate-y-[150%] btn btn-secondary h-20 w-20 opacity-70 rounded-full flex items-center justify-center shadow-lg">
            <p class="text-white">Pruebas</p>
        </div>
        <div class="electron absolute top-1/2 left-0 transform translate-x-[-150%] translate-y-[-50%] btn btn-secondary opacity-70 h-20 w-20 rounded-full flex items-center justify-center shadow-lg">
            <p class="text-white">Lanzar</p>
        </div>
    </div>
</div>

<script>
    window.addEventListener('scroll', function() {
  var electrons = document.querySelectorAll('.electron');
  var windowHeight = window.innerHeight;

  electrons.forEach(function(electron) {
    var distanceToTop = electron.getBoundingClientRect().top;
    if (distanceToTop <= windowHeight) {
      electron.classList.add('visible');
    }
  });
});

</script>

